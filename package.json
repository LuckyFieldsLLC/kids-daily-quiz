{
  "name": "serverless-quiz-app",
  "version": "1.0.0",
  "description": "A serverless quiz management application.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:ci": "node -v && npm -v && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:cov": "vitest run --coverage",
    "test:serial": "vitest run --max-workers=1",
    "test:handles": "vitest run --detectOpenHandles",
    "test:file": "vitest run --pool=threads --max-workers=1",
    "test:smoke": "cross-env FORCE_LOCAL_BLOBS=1 vitest run tests/apiSmoke.blobs.test.ts",
    "test:verbose": "cross-env VITEST_MAX_THREADS=1 VITEST_HEARTBEAT=1 VITEST_TRACE_TESTS=1 vitest run --reporter=verbose --max-workers=1",
    "test:diag": "cross-env VITEST_MAX_THREADS=1 VITEST_HEARTBEAT=1 VITEST_DIAG_HANDLES=1 vitest run --reporter=basic --detectOpenHandles --max-workers=1",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:update": "playwright test --update-snapshots",
    "lint": "eslint . --ext .ts,.tsx",
    "smoke:http": "node scripts/smoke-http.cjs",
    "dev:9999": "netlify dev --port 9999 --target-port 3000 --offline",
    "smoke:http:local": "cross-env SMOKE_BASE=http://localhost:9999 node scripts/smoke-http.cjs",
    "smoke:http:prod": "cross-env SMOKE_BASE=https://effortless-melba-084f86.netlify.app node scripts/smoke-http.cjs"
  },
  "engines": {
    "node": ">=20 <21"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@heroicons/react": "^2.1.5",
    "@netlify/blobs": "^10.0.11",
    "clsx": "^2.1.1",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "file-saver": "^2.0.5",
    "openai": "^6.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@neondatabase/serverless": "^0.9.3",
    "@netlify/functions": "^2.8.2",
    "@playwright/test": "^1.56.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/file-saver": "^2.0.7",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.1.9",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "msw": "^2.6.8",
    "postcss": "^8.4.47",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.13",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^5.3.1",
    "vitest": "^2.1.9"
  }
}
